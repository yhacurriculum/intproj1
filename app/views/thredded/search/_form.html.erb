
<%= form_tag search_path(messageboard), :class => 'thredded--form search_bar' , method: 'get' do %> <!-- thredded--form thredded--navigation--search-->
    <%= text_field_tag :q, @query,
                     type:        'search',
                     required:    true,
                     # If there are no results the user will likely want to change the query, so auto-focus.
                     autofocus:   @query.presence && !@topics.presence,
                     placeholder: 'Search . . .' %>
    
<% end %>
