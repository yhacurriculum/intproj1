<header class="thredded--topic-header">
  <h1 class="thredded--topic-header--title"><%= topic.title %></h1>
  <cite class="thredded--topic-header--started-by">
    <%= t 'thredded.topics.started_by_html',
          time_ago: time_ago(topic.created_at),
          user:     user_link(topic.user) %>
  </cite>
  
  
  <div>
    <% if ( (topic.can_update? && (thredded_current_user.name).to_s == (topic.user).to_s) ) || current_user.admin? == true %>
      <%= link_to t('thredded.topics.edit'), topic.edit_path,
                  class: 'thredded--topic-header--edit-topic' %>
    <span> &nbsp; | &nbsp; </span>
    <% end %>
    
    <% if ( topic.can_destroy? && (thredded_current_user.name).to_s == (@topic.user).to_s )|| current_user.admin? == true %>  
        <%= form_tag topic.destroy_path, method: :delete, :style => "display:inline;" do %>
          <%= submit_tag 'Delete Topic', class: 'thredded--form--delete', :style => "display:inline;" %>
        <% end %>
    <% end %>
  </div>
<hr>    
</header>
